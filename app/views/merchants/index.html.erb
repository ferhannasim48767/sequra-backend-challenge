<p id="notice"><%= notice %></p>

<h1>Merchants</h1>

<div class="table-responsive"> 
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>CIF</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @merchants.each do |merchant| %>
        <tr>
          <td><%= merchant.name %></td>
          <td><%= merchant.email %></td>
          <td><%= merchant.cif %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Merchant', new_merchant_path %>
